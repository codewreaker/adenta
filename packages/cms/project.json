{
    "name": "cms",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/cms/src",
    "projectType": "application",
    "release": {
        "version": {
            "manifestRootsToUpdate": [
                "{projectRoot}",
                "dist/{projectRoot}"
            ],
            "currentVersionResolver": "git-tag",
            "fallbackCurrentVersionResolver": "disk"
        }
    },
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/js:swc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/{projectRoot}",
                "main": "{projectRoot}/src/index.ts",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "assets": [
                    "cms/*.md"
                ]
            }
        },
        "build-admin": {
            "executor": "nx:run-commands",
            "options": {
                "command": "NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
                "cwd": "packages/cms"
            }
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "NODE_OPTIONS=--no-deprecation next dev",
                "cwd": "packages/cms"
            }
        },
        "devsafe": {
            "executor": "nx:run-commands",
            "options": {
                "command": "rm -rf .next && NODE_OPTIONS=--no-deprecation next dev",
                "cwd": "packages/cms"
            }
        },
        "generate:importmap": {
            "executor": "nx:run-commands",
            "options": {
                "command": "NODE_OPTIONS=--no-deprecation payload generate:importmap",
                "cwd": "packages/cms"
            }
        },
        "generate:types": {
            "executor": "nx:run-commands",
            "options": {
                "command": "NODE_OPTIONS=--no-deprecation payload generate:types",
                "cwd": "packages/cms"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "NODE_OPTIONS=--no-deprecation next lint",
                "cwd": "packages/cms"
            }
        },
        "payload": {
            "executor": "nx:run-commands",
            "options": {
                "command": "NODE_OPTIONS=--no-deprecation payload",
                "cwd": "packages/cms"
            }
        },
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "pnpm exec nx run cms:build-admin",
                    "NODE_OPTIONS=--no-deprecation next start"
                ],
                "parallel": false,
                "cwd": "packages/cms"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "nx run cms:test:int",
                    "nx run cms:test:e2e"
                ],
                "parallel": false
            }
        },
        "test:e2e": {
            "executor": "nx:run-commands",
            "options": {
                "command": "NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" playwright test",
                "cwd": "packages/cms"
            }
        },
        "test:int": {
            "executor": "nx:run-commands",
            "options": {
                "command": "NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
                "cwd": "packages/cms"
            }
        }
    },
    "nx-release-publish": {
        "dependsOn": [
            "build"
        ],
        "options": {
            "packageRoot": "dist/{projectRoot}"
        }
    }
}