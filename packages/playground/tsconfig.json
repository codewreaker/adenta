{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@adenta/ui": ["../ui/src"],
      "@adenta/core": ["../core/src"],
      "@adenta/cli": ["../cli/src"]
    }
  },
  "include": ["src"],
    "ts-node": {
    "compilerOptions": {
      "module": "ES2020",
    }
  }
}
