{
  "name": "@adenta/source",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "tmp/local-registry/storage"
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
      "commands": [
        "pnpm exec nx release --skip-publish"
      ],
      "parallel": false
      }
    }
  }
}
